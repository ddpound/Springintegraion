<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ysj.root.board.dao.BoardDAO">

	<resultMap type="com.ysj.root.board.dto.BoardDTO"
		id="mappingBoard">
		<result property="boardId" column="board_id" />
		<result property="title" column="title" />
		<result property="contents" column="contents" />
		<result property="writedate" column="writedate" />
		<result property="hit" column="hit" />
		<result property="writeuser" column="writeuser" />
	</resultMap>

	<insert id="saveBoard">
		insert into board_in values(autoAddId.NEXTVAL,
		#{title}, #{contents},
		#{writedate}, #{hit}, #{writeuser})
	</insert>

	<select id="ShowBoardList" resultMap="mappingBoard" parameterType="map">
		 select B.* from(select rownum rn, A.* from(select * from board_in order by board_id desc)A)B where rn between #{startBoardNum} and #{endBoardNum}
	</select>

	<select id="SelectBoard" resultMap="mappingBoard">
		select * from board_in where board_id = #{boardId}
	</select>

	<select id="countBoard" resultType="int">
		select count(*) from board_in
	</select>


</mapper>